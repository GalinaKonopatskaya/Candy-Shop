<%- include ('layout/header.ejs'); -%>









<% products.forEach(function(product){ %>

  
<div class = "product-card" data-id = '<%= product.id %>'>
                        
  <figure>
        <img class = "product-img" src= "../images/img/<%= product.url %>" >
                  <figcaption>
                  <a href="/product?id=<%= product.id %>&name=<%= product.name %>">
                         <h2 ><%= product.name %></h2>
                         <p><%= product.info %></p>
                         </a>
                         <div class = "cost">
                         <div> <h3 class = "price"> Цена за 1шт. <%= product.cost %></h3> </div>
                         <input type="number" id="count" min="0" value="0">
                         <div> <h3 class = "price"> Итого: 00.00</h3> </div>
                         </div>
                         <button type = "button">В корзину</button>
                </figcaption>

  </figure>

</div> 
<% }); %>



</body>



<%- include ('layout/footer.ejs'); -%>
</html>